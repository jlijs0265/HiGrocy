<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.EmployeeMapper">

	<resultMap type="org.zerock.domain.EmployeeVO" id="empMap">
		<id property="emp_no" column="emp_no"/>
		<result property="emp_no" column="emp_no"/>
		<result property="empid" column="empid"/>
		<result property="empname" column="empname"/>
		<result property="emppass" column="emppass"/>
		<result property="regdate" column="regdate"/>
		<collection property="auth" resultMap="authMap"></collection>
	</resultMap>
	
	<resultMap type="org.zerock.domain.AuthVO" id="authMap">
		<result property="emp_no" column="emp_no"/>
		<result property="auth" column="auth"/>
	</resultMap>


	<select id="read" resultMap="empMap">
		SELECT emp.emp_no, empid, emppass, empname, regdate, emp_auth.auth "AUTH"
			FROM emp LEFT OUTER JOIN emp_auth ON emp.emp_no = emp_auth.emp_no
			WHERE emp.empid = #{empid}
	</select>

</mapper>